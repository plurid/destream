{
    "manifest_version" : 3,
    "name" : "destream",
    "short_name" : "destream",
    "description" : "remote control web pages in the browser of your followers; let streamers control web pages in your browser",
    "version" : "1.0.0",
    "author": "plurid",

    "action" : {
        "default_title" : "destream",
        "default_icon" : "assets/icons/icon.png",
        "default_popup" : "popup.html"
    },

    "icons" : {
        "16" : "assets/icons/icon16.png",
        "32" : "assets/icons/icon32.png",
        "48" : "assets/icons/icon48.png",
        "128" : "assets/icons/icon128.png"
    },

    "options_ui": {
        "page": "options.html"
    },

    "incognito": "spanning",

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "contentscript.js"
        ],
        "run_at": "document_end"
    }],

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "activeTab",
        "notifications",
        "storage",
        "tabs"
    ],

    "host_permissions": [
        "<all_urls>"
    ]
}
